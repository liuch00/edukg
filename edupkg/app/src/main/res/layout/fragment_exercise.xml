<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".data.ExerciseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/explore"
                app:riv_corner_radius="20dp" />

            <TextView
                android:id="@+id/explore_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:rotationX="0"
                android:text="知识链接"
                android:textColor="@color/deepskyblue"
                android:textSize="18sp"
                android:textStyle="bold"

                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F3F5F4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/explore_guess_like"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/guess_like"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:rotationX="0"
                android:text="猜你喜欢"
                android:textColor="@color/person_label"
                android:textSize="12sp"

                />

            <TextView
                android:clickable="true"
                android:id="@+id/explore_exercise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/exercise"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="试题练习"
                android:textColor="@color/person_label"
                android:textSize="12sp" />

            <TextView
                android:clickable="true"
                android:id="@+id/explore_path"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/path"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="路径分析"
                android:textColor="@color/person_label"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F3F5F4" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:clickable="true"
            android:id="@+id/explore_tree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tree"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:rotationX="0"
            android:text="知识树"
            android:textColor="@color/person_label"
            android:textSize="12sp"

            />

        <TextView
            android:clickable="true"
            android:id="@+id/explore_talk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/talk"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="交流分享"
            android:textColor="@color/person_label"
            android:textSize="12sp" />

        <TextView
            android:clickable="true"
            android:id="@+id/explore_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/data"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="数据"
            android:textColor="@color/person_label"
            android:textSize="12sp" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F3F5F4" />



    </LinearLayout>

</FrameLayout>